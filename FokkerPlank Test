import eduviges.paramo as para
import Eduviges as ed
import numpy as np
import matplotlib.pyplot as plt

#constants/spaces
C=3.48e-11

t = np.logspace(0,8,100)
g = np.logspace(0,6,1000)
zeros = np.full(len(g),1e-200)
inf=10e200
#distribution
n = np.zeros((100,1000))
n[0,:] = np.ones(1000)
n[0,:350] = np.zeros(350)
n[0,-10:] = np.zeros(10)
# gmax = 1e2
# gci  = np.argmin(np.abs(g-gmax))
#n[0,:gci]

#injectionarray
inj= np.full(len(g),1)
inj[:350]=np.zeros(350)
inj[-10:]=np.zeros(10)

#examplesetups
twocool = C*g**2
threeesc = 1/(C*10e4)
fourinj = inj/threeesc
sixdif= (g**2)/threeesc

for i in range(1,100):
    dt= t[i]-t[i-1]
    n[i,:]= para.distribs.fp_findif_difu(dt,g,n[i-1,:],twocool,sixdif,fourinj,inf,inf)


numplots=20
fig,ax=  plt.subplots()
ax.set_yscale('log')
ax.set_xscale('log')
colormap = plt.cm.rainbow
plt.gca().set_prop_cycle(plt.cycler('color',plt.cm.jet(np.linspace(0,1,numplots))))

for i in range(0,numplots):
    plt.plot(g,n[0+i*5,:])


#labels
plt.xlabel('\u03B3')
plt.ylabel('n [$\mathregular{cm^{-3}}$]')
plt.ylim([1e-4,10e6])
plt.show()




